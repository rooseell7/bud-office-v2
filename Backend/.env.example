APP_PORT=3000
APP_HOST=0.0.0.0

# CORS: allowed origins for browser requests.
# - For single-port deployment (frontend served by backend), simplest is: CORS_ORIGINS=*
# - For dev, specify comma-separated origins.
# Examples:
# CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
# CORS_ORIGINS=http://95.47.196.98:3000
CORS_ORIGINS=*

# Optional: directory with built frontend (index.html + assets) to serve from backend
STATIC_DIR=public

DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=buduy_crm

JWT_SECRET=supersecretjwtkey

# Redis (STEP 5: presence, Socket.IO adapter, locks). Optional for single-instance.
# Use REDIS_URL or REDIS_HOST + REDIS_PORT + REDIS_PASSWORD.
