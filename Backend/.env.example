APP_PORT=3000
APP_HOST=0.0.0.0

# CORS: comma-separated allowed origins (no spaces). Prefer whitelist over *.
# - Nginx/prod (browser at http://localhost or http://IP): add http://localhost,http://127.0.0.1 and your IP/domain.
# - Dev (Vite 5173): add http://localhost:5173,http://127.0.0.1:5173
# Example for office PC + remote server:
# CORS_ORIGINS=http://localhost,http://127.0.0.1,http://95.47.196.98
CORS_ORIGINS=http://localhost,http://127.0.0.1

# Optional: directory with built frontend (index.html + assets) to serve from backend
STATIC_DIR=public

DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=buduy_crm

JWT_SECRET=supersecretjwtkey

